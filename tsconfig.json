{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"stripInternal": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"module": "es6",
		"moduleResolution": "node",
		"paths": {
			"@angular/core": [
				"node_modules/@angular/core"
			],
			"rxjs/*": [
				"node_modules/rxjs/*"
			]
		},
		"rootDir": ".",
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"skipLibCheck": true,
		"lib": [
			"es6",
			"dom"
		]
	},
	"files": [
		"./index.ts"
	],
	"angularCompilerOptions": {
		"strictMetadataEmit": true,
		"skipTemplateCodegen": true
	}
}